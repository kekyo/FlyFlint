<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Core'">
    <_FF_RuntimeName>dotnet </_FF_RuntimeName>
    <_FF_ExecutableName>ff.dll</_FF_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Full'">
    <_FF_RuntimeName></_FF_RuntimeName>
    <_FF_ExecutableName>ff.exe</_FF_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Mono'">
    <_FF_RuntimeName>mono </_FF_RuntimeName>
    <_FF_ExecutableName>ff.exe</_FF_ExecutableName>
  </PropertyGroup>

</Project>
