<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Core'">
    <_FFB_RuntimeName>dotnet </_FFB_RuntimeName>
    <_FFB_ExecutableName>ffb.dll</_FFB_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Full'">
    <_FFB_RuntimeName></_FFB_RuntimeName>
    <_FFB_ExecutableName>ffb.exe</_FFB_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Mono'">
    <_FFB_RuntimeName>mono </_FFB_RuntimeName>
    <_FFB_ExecutableName>ffb.exe</_FFB_ExecutableName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Core'">
    <_FFB_PlatformName Condition="('$(MicrosoftNETBuildTasksTFM)' == '') AND ('$(BundledNETCoreAppTargetFrameworkVersion)' == '')">netcoreapp2.0</_FFB_PlatformName>
    <_FFB_PlatformName Condition="('$(MicrosoftNETBuildTasksTFM)' == '') AND ($(BundledNETCoreAppTargetFrameworkVersion) &gt;= 5.0)">net$(BundledNETCoreAppTargetFrameworkVersion)</_FFB_PlatformName>
    <_FFB_PlatformName Condition="('$(MicrosoftNETBuildTasksTFM)' == '') AND ($(BundledNETCoreAppTargetFrameworkVersion) &lt; 5.0)">netcoreapp$(BundledNETCoreAppTargetFrameworkVersion)</_FFB_PlatformName>
    <_FFB_PlatformName Condition="'$(MicrosoftNETBuildTasksTFM)' != ''">$(MicrosoftNETBuildTasksTFM)</_FFB_PlatformName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' != 'Core'">
    <_FFB_PlatformName>net45</_FFB_PlatformName>
  </PropertyGroup>

  <PropertyGroup>
    <_FFB_ScriptBaseDir>$(MSBuildThisFileDirectory)</_FFB_ScriptBaseDir>
    <_FFB_ToolingDir>$([System.IO.Path]::Combine('$(_FFB_ScriptBaseDir)','..','tools','$(_FFB_PlatformName)'))</_FFB_ToolingDir>
  </PropertyGroup>

</Project>
